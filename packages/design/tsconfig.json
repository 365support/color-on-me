{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "composite": true,
    "types": ["@emotion/react/types/css-prop", "jest"],
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"],
      "@libs": ["../libs/src"]
    }
  },

  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
